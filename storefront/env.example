# Storefront Configuration
# Copy this file to .env.local and fill in your values

# Base URL for the storefront (defaults to http://localhost:3000 if not set)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Medusa backend URL (defaults to http://localhost:9000 if not set)
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000

# Default region code for users without geolocation (defaults to "us" if not set)
NEXT_PUBLIC_DEFAULT_REGION=us

# Publishable API key from Medusa
# If your backend is running, this will be auto-fetched from /key-exchange
# Otherwise, get it from your Medusa Admin at /app/settings/publishable-api-keys
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=

# Optional: MinIO endpoint for media storage
# NEXT_PUBLIC_MINIO_ENDPOINT=

# Optional: Payment provider keys
# NEXT_PUBLIC_STRIPE_KEY=
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# Optional: Enable search (requires MeiliSearch backend configuration)
# NEXT_PUBLIC_FEATURE_SEARCH_ENABLED=true

