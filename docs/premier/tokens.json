{
  "meta": {
    "name": "PremierBioLabs Design Tokens",
    "version": "0.1.0",
    "updated": "2025-10-04"
  },
  "colors": {
    "primary": "#007A63",
    "primaryBase": "#009F7F",
    "primaryContrast": "#FFFFFF",
    "background": "#FAFAFA",
    "surface": "#FFFFFF",
    "text": "#222222",
    "textMuted": "#868686",
    "border": "#E6E6E6",
    "success": "#1E8E3E",
    "warning": "#B9770E",
    "error": "#C62828",
    "info": "#1473E6"
  },
  "typography": {
    "fontFamilyBase": "'Open Sans', system-ui, -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
    "fontFamilyAlt": "'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.7
    },
    "scale": {
      "xs": "12px",
      "sm": "14px",
      "md": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px"
    }
  },
  "spacing": {
    "xxs": "4px",
    "xs": "8px",
    "sm": "12px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "pill": "999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 4px 8px rgba(0,0,0,0.08)",
    "lg": "0 10px 24px rgba(0,0,0,0.12)"
  },
  "buttons": {
    "primary": {
      "bg": "{colors.primary}",
      "text": "{colors.primaryContrast}",
      "hoverBg": "#006F59",
      "activeBg": "#00624F",
      "border": "transparent"
    },
    "secondary": {
      "bg": "{colors.surface}",
      "text": "{colors.primary}",
      "hoverBg": "#F3F7F6",
      "activeBg": "#E6F0EE",
      "border": "{colors.primary}"
    }
  },
  "layout": {
    "containerMaxWidth": "1200px",
    "contentWidth": "960px",
    "gridGap": "{spacing.lg}"
  },
  "css": {
    "vars": {
      "--color-primary": "{colors.primary}",
      "--color-primary-base": "{colors.primaryBase}",
      "--color-bg": "{colors.background}",
      "--color-surface": "{colors.surface}",
      "--color-text": "{colors.text}",
      "--color-muted": "{colors.textMuted}",
      "--color-border": "{colors.border}",
      "--radius-md": "{radius.md}",
      "--shadow-md": "{shadows.md}"
    }
  },
  "a11y": {
    "contrast": {
      "primaryOnWhite": "AA pass for normal text (>=4.5:1)",
      "notes": "Use --color-primary (#007A63) for text on white; primaryBase (#009F7F) is suitable for large text (>=24px) or non-text visuals."
    }
  }
}


